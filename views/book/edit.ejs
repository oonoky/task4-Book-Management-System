<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing: <%= book.bookName %> <%= book.authorName %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <button class="btn btn-sm btn-outline-secondary">?</button>
      </div>
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active"><%= book.bookName %> <%= book.authorName %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(book.updatedAt).toUTCString()  %></b>
        <b>bookId:</b> <%= book._id %>
      </div>
    </div>
  
  </div>
  
  
  <form action="/edit/<%= book._id %>?_method=PUT" method="POST">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="bookName">Book Name</label>
        <input type="text" class="form-control" id="bookName" name="bookName" value="<%= book.bookName %>" placeholder="book Name" required>
      </div>
  
      <div class="col">
        <label for="authorName">Author Name</label>
        <input type="text" class="form-control" id="authorName" name="authorName" value="<%= book.authorName %>" placeholder="Author Name Name" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="page">Page</label>
        <input type="text" class="form-control" id="page" name="page" value="<%= book.page %>" placeholder="Page" required>
      </div>
  
    <div class="form-group mb-4">
        <label for="details">Book Details</label>
        <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="Book Details"><%= book.details %></textarea>
    </div>
  
    <div class="form-group mb-4">
      <button type="submit" class="btn btn-primary">Update Book</button>
  
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Book</button>
  
    </div>
  
  </form>
  
  
  
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a book record.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the book record of <b class="fw-bold"><%= book.bookName %> <%= book.authorName %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= book._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, Remove Book</button>
          </form>
        </div>
      </div>
    </div>
  </div>